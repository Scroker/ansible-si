[Unit]
Description=WSO2 Stream Analytics Dashboard - Monitor
After=network.target

[Service]
ExecStart={{ carbon_home }}/bin/monitor.sh start
ExecStop={{ carbon_home }}/bin/monitor.sh stop
ExecRestart={{ carbon_home }}/bin/monitor.sh restart
PIDFile={{ carbon_home }}/wso2/monitor/runtime.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
